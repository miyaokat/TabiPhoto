<%= form_with(model: @photo, local: true) do |pho| %>

<%= pho.text_field :title %>
<%= pho.file_field :avatar %>
<p>写真情報</p>
<%= pho.text_field :photo_info %>
<p>写真住所</p>
<%= pho.text_field :photo_address %>
<div class="radio">
	<label class="radio-button">
	<%= pho.radio_button :public_flag, "true" , {:checked => true} %>
	<label for="radio-1" class="radio-label"> 公開</label>
	<%= pho.radio_button :public_flag, "false" %>
	<label for="radio-2" class="radio-label"> 非公開</label>
	</label>
</div>
<br>
<label name="tag_name" class="form-control post_form" placeholder=",かスペースを挟めば一度に複数のタグを登録できます"></label>
<%= pho.submit "写真を投稿する" %>
<% end %>
