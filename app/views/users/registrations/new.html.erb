<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="signup-field form-group">
  <h2>会員登録</h2>

  <h3>ニックネーム</h3>
  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:'form-control', placeholder:"サイト内で使用する名前を登録" %>
  </div>

  <h3>メールアドレス</h3>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
  </div>

  <h3>パスワード</h3>
  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
  </div>

  <h3>パスワード入力確認</h3>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control', placeholder:"確認のため上記と同じパスワードを入力してください" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "上記の内容で会員登録を実施", class:'btn btn-success' %>
  </div>
</div>
<% end %>

<%= render "users/shared/links" %>
